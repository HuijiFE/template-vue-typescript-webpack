{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // for vue-class-component and vuex-class
    "experimentalDecorators": true,
    // for vue-class
    "strictFunctionTypes": false,
    "strict": true,
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src": ["./src/*"]
    }
  },
  "include": ["./src/**/*"]
}
